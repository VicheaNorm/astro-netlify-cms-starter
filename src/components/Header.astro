---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

const { color } = Astro.props;
---

<center>
  <nav
    class="flex flex-wrap items-center justify-between p-2 m-4 bg-white max-w-7xl sticky top-0"
  >
    <div class="w-auto lg:order-2 lg:w-1/5 lg:text-center">
      <a
        class="text-lg font-semibold text-primary font-heading hover:text-orange-500 fontKh"
        href="/"
      >
        ព្រឹត្តិការណ៍អង្គរសង្ក្រាន្ត
        <!-- <img src="/as-logo.svg" alt="as-logo" class="w-full sticky" /> -->
      </a>
    </div>
    <div class="block lg:hidden">
      <button
        class="flex items-center px-3 py-2 text-primary border border-teal-500 rounded navbar-burger"
      >
        <svg
          class="w-3 h-3 fill-current"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <title>Menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"> </path>
        </svg>
      </button>
    </div>
    <div class="hidden w-full navbar-menu lg:order-1 lg:block lg:w-2/5">
      <a
        class="block mt-4 mr-10 text-primary font-medium lg:inline-block lg:mt-0 hover:text-orange-500 hover:border-b hover:border-b-orange-500"
        href="/about"
      >
        អំពីខ្ញុំ
      </a>
      <a
        class="block mt-4 mr-10 text-primary font-medium lg:inline-block lg:mt-0 hover:text-orange-500"
        href="/program"
      >
        កម្មវិធី
      </a>
      <a
        class="block mt-4 text-primary font-medium lg:inline-block lg:mt-0 hover:text-orange-500"
        href="/world-record"
      >
        បំបែកកំណត់​ត្រា​
      </a>
    </div>
    <div
      class="hidden w-full navbar-menu lg:order-3 lg:block lg:w-2/5 lg:text-right"
    >
      <a
        class="block mt-4 mr-10 text-primary font-medium lg:inline-block lg:mt-0 hover:text-orange-500"
        href="/blog"
      >
        ប្លុក
      </a>

      <a
        class="block mt-4 mr-10 text-primary font-medium lg:inline-block lg:mt-0 hover:text-orange-500"
        href="/media-center"
      >
        media-center
      </a>
      <a
        class="block mt-4 text-primary font-medium lg:inline-block lg:mt-0 hover:text-orange-500"
        href="/contact"
      >
        ទំនាក់ទំនង
      </a>
    </div>
  </nav>
  <hr class="max-w-xl pt-2 my-2" />
</center>
